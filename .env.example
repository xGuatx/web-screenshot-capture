# ShotURL v3.0 Configuration
# Copier ce fichier vers .env et adapter les valeurs

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=False

# =============================================================================
# SECURITE
# =============================================================================
SECRET_KEY=changez-cette-cle-par-une-longue-chaine-aleatoire-securisee
ALLOW_LOCAL_URLS=False

# =============================================================================
# LIMITES STRICTES POUR 4GB RAM
# =============================================================================
# Nombre max de navigateurs Playwright concurrents
# Chaque navigateur = ~250MB RAM
# 4 navigateurs = ~1GB, laisse 3GB pour le systeme
MAX_CONCURRENT_BROWSERS=4

# Nombre max de sessions utilisateur
MAX_CONCURRENT_SESSIONS=10

# Alerte memoire (MB)
MAX_MEMORY_MB=3500

# =============================================================================
# TIMEOUTS (secondes)
# =============================================================================
BROWSER_TIMEOUT=20
PAGE_LOAD_TIMEOUT=10
SESSION_TIMEOUT=300

# Intervalle cleanup automatique (secondes)
CLEANUP_INTERVAL=30

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
